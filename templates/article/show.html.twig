{% extends 'layouts/main.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}

    <h1>{{ article.title }}</h1>

    {{ article.text }}<br>

    Уникальных просмотров: {{ article.views }}<br>

    {% if article.image is not null %}
        <img src="{{ asset(article.image) }}" alt="pic">
    {% endif %}

{% endblock %}
